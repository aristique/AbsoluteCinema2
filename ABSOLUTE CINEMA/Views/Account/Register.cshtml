@model ABSOLUTE_CINEMA.Models.Register
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-form-container">
        <div class="auth-logo">
            <h1>ABSOLUTE CINEMA</h1>
        </div>
        
        <div class="auth-form">
            <h2>Регистрация</h2>
            
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="validation-summary">
                    @Html.ValidationSummary(true, "", new { @class = "error-message" })
                </div>
                
                <div class="form-group">
                    <div class="input-container">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-input", placeholder = " " })
                        @Html.LabelFor(m => m.Name, new { @class = "floating-label" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "field-error" })
                </div>
                
                <div class="form-group">
                    <div class="input-container">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = " " })
                        @Html.LabelFor(m => m.Email, new { @class = "floating-label" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-error" })
                </div>
                
                <div class="form-group">
                    <div class="input-container">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = " " })
                        @Html.LabelFor(m => m.Password, new { @class = "floating-label" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-error" })
                </div>
                
                <div class="form-group">
                    <div class="input-container">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input", placeholder = " " })
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "floating-label" })
                    </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-error" })
                </div>
                
                <div class="form-group terms-checkbox">
                    <label class="checkbox-container">
                        @Html.CheckBoxFor(m => m.Terms)
                        <span class="checkmark"></span>
                        @Html.LabelFor(m => m.Terms)
                    </label>
                    @Html.ValidationMessageFor(m => m.Terms, "", new { @class = "field-error" })
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn-submit">Зарегистрироваться</button>
                </div>
                
                <div class="auth-links">
                    <p>Уже есть аккаунт? <a href="@Url.Action("Login", "Account")">Войти</a></p>
                </div>
            }
        </div>
    </div>
</div>