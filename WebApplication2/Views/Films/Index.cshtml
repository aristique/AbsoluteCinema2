@{
    ViewBag.Title = "Фильмы";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Absolute Cinema - Фильмы</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #0a0a0a;
            color: #ffffff;
        }

        .logo {
            font-size: 2em;
            color: #e50914;
            font-weight: bold;
            font-family: 'Impact', sans-serif;
        }

        .nav-menu {
            display: flex;
            gap: 20px;
        }

            .nav-menu a {
                color: #ffffff;
                text-decoration: none;
                font-size: 1.1em;
                transition: color 0.3s;
            }

                .nav-menu a:hover {
                    color: antiquewhite;
                }

        .films-hero {
            height: 50vh;
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1536440136628-849c177e76a1') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-top: 80px;
        }

        .hero-content {
            max-width: 800px;
            padding: 20px;
        }

        .films-hero h1 {
            font-size: 3.5em;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .films-section {
            padding: 50px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-title {
            font-size: 2em;
            margin-bottom: 30px;
            text-align: center;
        }

        .filter-container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 40px;
            justify-content: center;
        }

        .filter-button {
            background-color: #1a1a1a;
            color: white;
            border: 1px solid #333;
            padding: 10px 20px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .filter-button:hover, .filter-button.active {
                background-color: #e50914;
                border-color: #e50914;
            }

        .search-container {
            max-width: 600px;
            margin: 0 auto 40px;
            display: flex;
        }

        .search-input {
            flex: 1;
            padding: 12px 15px;
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 5px 0 0 5px;
            color: #ffffff;
            font-size: 1em;
        }

        .search-button {
            background-color: #e50914;
            color: white;
            border: none;
            padding: 0 20px;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .search-button:hover {
                background-color: #b2070f;
            }

        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .movie-card {
            background: #1a1a1a;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s;
            text-decoration: none;
            color: inherit;
            position: relative;
        }

            .movie-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(229, 9, 20, 0.2);
            }

            .movie-card img {
                width: 100%;
                height: 320px;
                object-fit: cover;
                transition: transform 0.5s;
            }

            .movie-card:hover img {
                transform: scale(1.05);
            }

        .movie-info {
            padding: 15px;
        }

        .movie-title {
            font-size: 1.2em;
            margin-bottom: 8px;
            color: #ffffff;
        }

        .movie-details {
            display: flex;
            justify-content: space-between;
            color: #cccccc;
            font-size: 0.9em;
            margin-bottom: 10px;
        }

        .movie-rating {
            display: flex;
            align-items: center;
            color: #e50914;
            font-weight: bold;
        }

            .movie-rating span {
                margin-left: 5px;
            }

        .movie-genre {
            color: #aaaaaa;
            font-size: 0.9em;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 40px;
        }

        .page-link {
            display: inline-block;
            padding: 8px 15px;
            background: #1a1a1a;
            color: #ffffff;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .page-link:hover, .page-link.active {
                background-color: #e50914;
            }

        .featured-film {
            background: #1a1a1a;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 50px;
            display: grid;
            grid-template-columns: 1fr 1fr;
        }

            .featured-film img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .featured-content {
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .featured-title {
            font-size: 2em;
            margin-bottom: 15px;
            color: #ffffff;
        }

        .featured-details {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            color: #cccccc;
        }

        .featured-description {
            color: #cccccc;
            line-height: 1.6;
            margin-bottom: 25px;
        }

        .watch-button {
            display: inline-block;
            background-color: #e50914;
            color: white;
            padding: 12px 25px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
            text-align: center;
            max-width: 200px;
        }

            .watch-button:hover {
                background-color: #b2070f;
            }

        @@media (max-width: 768px) {
            .featured-film {
                grid-template-columns: 1fr;
            }

                .featured-film img {
                    height: 300px;
                }

            .movie-grid {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            }
        }
    </style>
</head>
<body>
