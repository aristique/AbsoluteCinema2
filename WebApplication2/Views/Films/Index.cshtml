    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #0a0a0a;
            color: #ffffff;
        }

        .logo {
            font-size: 2em;
            color: #e50914;
            font-weight: bold;
            font-family: 'Impact', sans-serif;
        }

        .nav-menu {
            display: flex;
            gap: 30px;
        }

            .nav-menu a {
                color: #ffffff;
                text-decoration: none;
                font-size: 1.1em;
                transition: color 0.3s;
            }

                .nav-menu a:hover {
                    color: #e50914;
                }

        .section-title {
            font-size: 2em;
            margin-bottom: 30px;
            text-align: center;
        }

        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 50px auto;
        }

        .movie-card {
            background: #1a1a1a;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s;
        }

            .movie-card:hover {
                transform: translateY(-5px);
            }

            .movie-card img {
                width: 100%;
                height: 350px;
                object-fit: cover;
            }

        .movie-info {
            padding: 15px;
            text-align: center;
        }

        .footer {
            background-color: #000000;
            padding: 40px 20px;
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
