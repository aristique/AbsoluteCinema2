<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Absolute Cinema - Вход/Регистрация</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #0a0a0a;
            color: #ffffff;
            min-height: 100vh;
        }

        .header {
            background-color: #000000;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .logo {
            font-size: 2em;
            color: #e50914;
            font-weight: bold;
            font-family: 'Impact', sans-serif;
        }

        .auth-container {
            margin-top: 120px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            padding: 30px;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(229, 9, 20, 0.2);
        }

        .auth-tabs {
            display: flex;
            margin-bottom: 30px;
            border-bottom: 2px solid #333;
        }

        .auth-tab {
            flex: 1;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            border-bottom: 3px solid transparent;
        }

        .auth-tab.active {
            border-bottom-color: #e50914;
            font-weight: bold;
        }

        .auth-form {
            display: none;
        }

        .auth-form.active {
            display: block;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #888;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"] {
            width: 100%;
            padding: 12px;
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 5px;
            color: white;
            font-size: 16px;
        }

        input:focus {
            outline: none;
            border-color: #e50914;
        }

        .submit-btn {
            width: 100%;
            padding: 15px;
            background: #e50914;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s;
        }

        .submit-btn:hover {
            background: #b2070f;
        }

        .auth-footer {
            text-align: center;
            margin-top: 20px;
            color: #666;
        }

        .auth-footer a {
            color: #e50914;
            text-decoration: none;
        }

 
            .header {
                padding: 15px;
            }

            .logo {
                font-size: 1.5em;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo">ABSOLUTE CINEMA</div>
        <nav class="nav-menu">
            <a href="index.html">Главная</a>
            <a href="#contact">Контакты</a>
        </nav>
    </header>

    <div class="auth-container">
        <div class="auth-tabs">
            <div class="auth-tab active" onclick="switchTab('login')">Вход</div>
            <div class="auth-tab" onclick="switchTab('register')">Регистрация</div>
        </div>

        <form id="login-form" class="auth-form active">
            <div class="form-group">
                <label>Email</label>
                <input type="email" required>
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <input type="password" required>
            </div>
            <button type="submit" class="submit-btn">Войти</button>
            <div class="auth-footer">
                <a href="#forgot-password">Забыли пароль?</a>
            </div>
        </form>

        <form id="register-form" class="auth-form">
            <div class="form-group">
                <label>Имя пользователя</label>
                <input type="text" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" required>
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <input type="password" required>
            </div>
            <div class="form-group">
                <label>Повторите пароль</label>
                <input type="password" required>
            </div>
            <button type="submit" class="submit-btn">Зарегистрироваться</button>
        </form>
    </div>

    <script>
        function switchTab(tabId) {
            // Переключение вкладок
            document.querySelectorAll('.auth-tab').forEach(tab => {
                tab.classList.remove('active');
            });

            document.querySelectorAll('.auth-form').forEach(form => {
                form.classList.remove('active');
            });

            document.querySelector(`#${tabId}-form`).classList.add('active');
            event.currentTarget.classList.add('active');
        }
    </script>
</body>
</html>