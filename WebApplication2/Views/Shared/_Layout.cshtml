<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="wwwroot/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="wwwroot/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <style>
        .header {
            background-color: #000000;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .footer {
            background-color: #000000;
            padding: 40px 20px;
            text-align: center;
            margin-top: 50px;
        }

        .logo {
            font-size: 2em;
            color: #e50914;
            font-weight: bold;
            font-family: 'Impact', sans-serif;
        }

        .nav-menu {
            display: flex;
            gap: 30px;
        }

            .nav-menu a {
                color: #ffffff;
                text-decoration: none;
                font-size: 1.1em;
                transition: color 0.3s;
            }

                .nav-menu a:hover {
                    color: #e50914;
                }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo">ABSOLUTE CINEMA</div>
        <nav class="nav-menu">
            <button type="button" class="btn btn-danger" href="@Url.Action("Index", "Home")">Главная</button>
            <a href="@Url.Action("Index", "Movies")">Фильмы</a>
            <a href="@Url.Action("Index", "News")">Новости</a>
            <a href="@Url.Action("Index", "About")">О нас</a>
            <a href="@Url.Action("Index", "Contact")">Контакты</a>
            <a href="@Url.Action("Index", "Registration")">Аутентификация</a>
        </nav>
    </header>

            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                        </ul>
                    </div>
                </div>
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer class="footer">
                    <div class="logo">ABSOLUTE CINEMA</div>
                    <p>© 2025 Все права защищены</p>
                    <div class="social-links">
                        <!-- Добавить иконки соцсетей -->
                    </div>
                </footer>
            </div>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>