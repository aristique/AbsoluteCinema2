<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <style>
        .header {
            background-color: #000000;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .nav-menu .btn {
            margin: 5px;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo text-white">ABSOLUTE CINEMA</div>
        <nav class="nav-menu">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg shadow-lg">Главная</a>
            <a href="@Url.Action("Index", "Films")" class="btn btn-success btn-lg shadow-lg">Фильмы</a>
            <a href="@Url.Action("Index", "News")" class="btn btn-warning btn-lg shadow-lg">Новости</a>
            <a href="@Url.Action("Index", "About")" class="btn btn-info btn-lg shadow-lg">О нас</a>
            <a href="@Url.Action("Index", "Contact")" class="btn btn-danger btn-lg shadow-lg">Контакты</a>
            <a href="@Url.Action("Index", "Registration")" class="btn btn-secondary btn-lg shadow-lg">Аутентификация</a>
        </nav>
    </header>

    <div class="container body-content" style="margin-top: 80px;">
        @RenderBody()
        <hr />
        <footer class="footer text-center">
            <div class="logo">ABSOLUTE CINEMA</div>
            <p>© 2025 Все права защищены</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
