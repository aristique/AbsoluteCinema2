@model IEnumerable<ABSOLUTE_CINEMA.AbsoluteCinema.ViewModels.MovieFormViewModel>

@{
    ViewBag.Title = "Управление фильмами";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Название</th>
            <th>Год</th>
            <th>Страна</th>
            <th style="width:200px">Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Country</td>
                <td>
                    @Html.ActionLink("Ред.", "Edit", new { id = m.Id }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Удал.", "Delete", new { id = m.Id }, new { @class = "btn btn-sm btn-danger ml-2" })
                </td>
            </tr>
        }
    </tbody>
</table>
