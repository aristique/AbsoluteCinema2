@model ABSOLUTE_CINEMA.AbsoluteCinema.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "Редактировать фильм";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Movies", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    
    @Html.HiddenFor(m => m.YouTubeVideoId)
    <div class="form-group">
        @Html.LabelFor(m => m.YouTubeVideoId, "YouTube Video ID")
        @Html.TextBoxFor(m => m.YouTubeVideoId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.YouTubeVideoId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Year)
        @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Year)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Country)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    <button type="submit" class="btn btn-primary">Обновить</button>
    @Html.ActionLink("Отмена", "Index", "Movies", null, new { @class = "btn btn-secondary ml-2" })
}
