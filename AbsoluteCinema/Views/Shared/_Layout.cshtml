<!DOCTYPE html>
<html lang="ru">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Absolute Cinema</title>

    <link href="https://fonts.googleapis.com/css2?family=Netflix+Sans:wght@300;400;700&display=swap" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    

    <link href="@Url.Content("~/Content/Style.css?v=1")" rel="stylesheet" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
</head>
<body class="netflix-dark">

    <nav class="navbar navbar-expand-lg navbar-dark netflix-navbar">
        <div class="container-fluid">
            <a class="navbar-brand netflix-logo" href="@Url.Action("Index", "Home")">
                <i class="bi bi-camera-reels-fill me-2"></i>Absolute Cinema
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Основное меню -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="bi bi-house-door me-1"></i>Главная
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Catalog")">
                                <i class="bi bi-collection-play me-1"></i>Каталог
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Profile")">
                                <i class="bi bi-person-circle me-1"></i>Профиль
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Subscribe", "Subscription")">
                                <i class="bi bi-star-fill me-1"></i>Подписки
                            </a>
                        </li>

                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock me-1"></i>Администрирование
                                </a>
                                <ul class="dropdown-menu netflix-dropdown">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "UserList")">
                                            <i class="bi bi-people-fill me-2"></i>Пользователи
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Create", "Movies")">
                                            <i class="bi bi-plus-circle-fill me-2"></i>Создать фильм
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Movies")">
                                            <i class="bi bi-pencil-fill me-2"></i>Редактировать
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    }
                </ul>


                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="btn netflix-btn-danger ms-2" href="@Url.Action("Logout", "Account")">
                                <i class="bi bi-box-arrow-right me-1"></i>Выход
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn netflix-btn-outline me-2" href="@Url.Action("Login", "Account")">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Вход
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn netflix-btn-danger" href="@Url.Action("Register", "Account")">
                                <i class="bi bi-person-plus-fill me-1"></i>Регистрация
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <main class="netflix-main">
        @RenderBody()
    </main>

    <!-- Подвал -->
    <footer class="netflix-footer py-4 mt-5">
        <div class="container text-center">
            <p class="mb-2">© 2025 Absolute Cinema. Все права защищены.</p>
            <div class="footer-links">
                <a href="#" class="text-muted me-3">Пользовательское соглашение</a>
                <a href="#" class="text-muted me-3">Конфиденциальность</a>
                <a href="#" class="text-muted">Служба поддержки</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (локально через Url.Content или с CDN) -->
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>

    <!-- jQuery Validate + Unobtrusive (требуют jQuery) -->
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
