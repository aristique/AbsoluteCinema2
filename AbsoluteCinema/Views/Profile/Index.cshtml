@model ABSOLUTE_CINEMA.Domain.DTO.ProfileViewModel
@{ ViewBag.Title = "Профиль"; Layout = "~/Views/Shared/_Layout.cshtml"; }
<h2>@ViewBag.Title</h2>
<div class="card p-3">
    <p><strong>Имя:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    @if (Model.Subscription != null)
    {
        <hr />
        <p><strong>Подписка:</strong> @Model.Subscription.Type до @Model.Subscription.EndDate.ToString("d")</p>
    }
    else
    {
        <div class="alert alert-info">У вас нет активной подписки.</div>
    }
</div>