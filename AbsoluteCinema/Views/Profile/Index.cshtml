@model ABSOLUTE_CINEMA.AbsoluteCinema.ViewModels.ProfileViewModel

<div class="login-page-container">
    <div class="login-wrapper">
        <!-- Заголовок профиля -->
        <div class="login-header">
            <div class="logo">
                <i class="bi bi-person-circle"></i>
                <span>Ваш Профиль</span>
            </div>
        </div>

        <!-- Данные пользователя -->
        <div class="input-group">
            <label>Имя:</label>
            <div class="input-field">
                <span>@Model.Name</span>
            </div>
        </div>

        <div class="input-group">
            <label>Email:</label>
            <div class="input-field">
                <span>@Model.Email</span>
            </div>
        </div>

        @if (Model.Subscription != null)
        {
            <h4 style="color: var(--netflix-light); margin-top: 2rem; margin-bottom: 1rem;">Информация о подписке</h4>

            <div class="input-group">
                <label>Начало:</label>
                <div class="input-field">
                    <span>@Model.Subscription.StartDate.ToString("dd.MM.yyyy")</span>
                </div>
            </div>

            <div class="input-group">
                <label>Окончание:</label>
                <div class="input-field">
                    <span>@Model.Subscription.EndDate.ToString("dd.MM.yyyy")</span>
                </div>
            </div>

            <div class="input-group">
                <label>Активна:</label>
                <div class="input-field">
                    <span>@(Model.Subscription.IsActive ? "Да" : "Нет")</span>
                </div>
            </div>
        }
        else
        {
            <p class="register-prompt" style="margin-top: 2rem; color: var(--netflix-light);">
                У вас нет активной подписки.
            </p>
        }
    </div>
</div>
