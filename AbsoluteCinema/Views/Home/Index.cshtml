@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Absolute Cinema - Главная</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #0a0a0a;
            color: #ffffff;
            margin: 0;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.9);
            padding: 20px 40px;
            display: flex;
            align-items: center;
            z-index: 1000;
        }

        .logo {
            font-size: 2em;
            color: #e50914;
            font-weight: bold;
            font-family: 'Impact', sans-serif;
            position: absolute;
            top: 20px;
            left: 40px;
        }

        .hero {
            height: 100vh;
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1585647347384-2593bc3576b0') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-top: 80px;
        }

        .hero-content {
            max-width: 800px;
            padding: 20px;
        }

        .hero h1 {
            font-size: 3.5em;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .hero p {
            font-size: 1.2em;
            margin-bottom: 20px;
        }

        .cta-button {
            background-color: #e50914;
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            font-size: 1.2em;
            cursor: pointer;
            transition: background-color 0.3s;
            margin: 15px;
        }

            .cta-button:hover {
                background-color: #b2070f;
            }

        .featured-section {
            padding: 50px 20px;
        }

        .section-title {
            font-size: 2em;
            margin-bottom: 30px;
            text-align: center;
        }

        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .movie-card {
            background: #1a1a1a;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s;
        }

            .movie-card:hover {
                transform: translateY(-5px);
            }

            .movie-card img {
                width: 100%;
                height: 350px;
                object-fit: cover;
            }

        .movie-info {
            padding: 15px;
        }

            .movie-info h3 {
                font-size: 1.3em;
                margin-bottom: 10px;
            }

            .movie-info p {
                font-size: 0.9em;
                color: #cccccc;
            }

        @@media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5em;
            }

            .logo {
                font-size: 1.5em;
                top: 15px;
                left: 20px;
            }

            header {
                padding: 15px 20px;
            }
        }
    </style>
</head>
<body>


    <section class="hero">
        <div class="hero-content">
            <h1>Мир кино без границ</h1>
            <p>Откройте для себя лучшие фильмы и сериалы всех времён</p>
            <button class="cta-button">Смотреть сейчас</button>
        </div>
    </section>

    <section class="featured-section">
        <h2 class="section-title">Популярные фильмы</h2>
        <div class="movie-grid">
            <div class="movie-card">
                <img src="https://via.placeholder.com/300x450" alt="Фильм 1">
                <div class="movie-info">
                    <h3>Название фильма 1</h3>
                    <p>Жанр: Драма</p>
                    <p>Год: 2023</p>
                </div>
            </div>
            <div class="movie-card">
                <img src="https://via.placeholder.com/300x450" alt="Фильм 2">
                <div class="movie-info">
                    <h3>Название фильма 2</h3>
                    <p>Жанр: Боевик</p>
                    <p>Год: 2024</p>
                </div>
            </div>
            <div class="movie-card">
                <img src="https://via.placeholder.com/300x450" alt="Фильм 3">
                <div class="movie-info">
                    <h3>Название фильма 3</h3>
                    <p>Жанр: Комедия</p>
                    <p>Год: 2022</p>
                </div>
            </div>
            <div class="movie-card">
                <img src="https://via.placeholder.com/300x450" alt="Фильм 4">
                <div class="movie-info">
                    <h3>Название фильма 4</h3>
                    <p>Жанр: Фантастика</p>
                    <p>Год: 2023</p>
                </div>
            </div>
        </div>
    </section>
</body>
</html>